---
// @ts-ignore: No type declarations for '@fontsource-variable/inter'
import '@fontsource-variable/inter';
import "../styles/global.css";
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/blog-nospillbowl/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="w-full min-h-screen flex flex-col bg-white overflow-x-hidden">
		<Navbar />
		<main class="flex flex-col mx-2 md:mx-[5%]">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>

	html {
		font-family: 'Inter Variable', sans-serif;
		scroll-behavior: smooth;
	}

	.trans {
		transition: all 0.3s;
	}
	
	p{
		max-width: 80ch;
	}

</style>
